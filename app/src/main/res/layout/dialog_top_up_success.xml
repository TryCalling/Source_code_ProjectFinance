<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <RelativeLayout
        android:id="@+id/dialog_content"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_dialog_background">

        <!-- Success Icon -->
        <ImageView
            android:id="@+id/ivSuccessIcon"
            android:layout_width="270dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_5"
            android:layout_marginTop="16dp" />

        <!-- Success Message -->
        <TextView
            android:id="@+id/tvSuccessMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivSuccessIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Top Up Successfully"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Description Text -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSuccessMessage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="The amount will be reflected in your account within a few minutes"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:gravity="center" />

        <!-- Continue Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_sign_up_background"
            android:text="Continue"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:paddingVertical="12dp"
            android:layout_marginBottom="4dp"/>
    </RelativeLayout>
</FrameLayout>
