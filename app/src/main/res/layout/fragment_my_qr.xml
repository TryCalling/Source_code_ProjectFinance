<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <FrameLayout
        android:layout_gravity="center"
        android:background="@color/color_splashscreen"
        android:layout_marginBottom="40dp"
        android:layout_width="260dp"
        android:layout_height="260dp">

        <!-- QR Code Display -->
        <ImageView
            android:id="@+id/myQRCodeImage"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:background="@drawable/qr_code_border"
            android:scaleType="fitCenter"
            android:src="@drawable/sample_qr_code" />

    </FrameLayout>

    <!-- Username -->
    <TextView
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="alexandermichael"
        android:textColor="@color/color_splashscreen"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
